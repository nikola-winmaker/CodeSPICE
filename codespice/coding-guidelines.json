{
  "indentation": {
    "type": "spaces",
    "size": 4
  },
  "namingConventions": {
    "variable": "snake_case",
    "function": "snake_case",
    "constant": "UPPER_CASE"
  },
  "spacing": {
    "aroundOperators": true,
    "beforeBraces": true
  },
  "lineLength": {
    "maxLength": 80
  },
  "commenting": {
    "requireHeader": true
  },
  "fileLength": {
    "maxLines": 500
  },
  "function": {
    "maxCyclomatic": 10,
    "maxLines": 50,
    "parameters": 4
  }
}
